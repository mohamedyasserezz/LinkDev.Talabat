@model ProductViewModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete @Model.Name</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <h1 class="mt-3">Are You Sure You want to delete this product ? @Model.Name</h1>
    <input asp-for="Id" hidden />
   <div class="form-group ">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group ">
        <label asp-for="Description" class="col-form-label"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group ">
        <label asp-for="Price" class="col-form-label"></label>
        <input asp-for="Price" class="form-control" type="number" />
    </div>

        <br />
        <br />

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}