@model UserRolesViewModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit @Model.UserName</h1>
<hr />
<div class="container">
    <form method="post" asp-action="Edit" class="mt-4">
        <input asp-for="UserId" class="form-control" hidden />
        <div>
            <label asp-for="UserName" class="form-control"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <h3>Manage User roles</h3>
        <hr />
        @for (int i = 0; i < Model.Roles.Count(); i++)
        {
            <div>
                <input asp-for="@Model.Roles[i].Name" hidden/>
                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-label" />
                <label asp-for="@Model.Roles[i]" class="form-check-label">@Model.Roles[i].Name</label>
                <span asp-validation-for="Roles"></span>
            </div>
        }
        <br />
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Back To index</a>
    </form>

</div>

